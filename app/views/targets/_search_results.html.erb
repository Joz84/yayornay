<%= simple_form_for @poll, url: poll_targets_path(@poll), method: :post do |f| %>
  <div class="collection-check-boxes" id="collection-targets">
    <%= f.collection_check_boxes :group_ids, @groups, :id, :name do |input| %>
      <label class="group-wrapper" id="group-<%= input.object.id %>">
        <%= input.check_box %>
        <div class="check-box" id="target">
          <div class="group-info">
            <div class="group-img">
              <%= image_tag input.object.url, class: "avatar" %>
              <i class="fa fa-check-square-o checked hidden" aria-hidden="true"></i>
              <i class="fa fa-square-o unchecked hidden" aria-hidden="true"></i>
            </div>
            <div class="group-text">
              <%= input.text %>
              <p><%= Belonging.where(group_id: input.object.id).count %> yayer(s)</p>
            </div>
          </div>
        </div>
      </label>
    <% end %>
  </div>
<% end %>
