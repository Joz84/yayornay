<div class= "check-box-title">
<h4 class= "text-center">Choisis tes cibles</h4>
</div>

<%= simple_form_for :search, html: {class: "text-center form-inline"}, url: new_poll_target_url, method: :get do |f| %>
  <%= f.input :search, label: false %>
  <%= f.button :submit, class: "btn btn-primary search-btn", value: "Rechercher" %>
<% end %>

<div class= "container">
  <%= simple_form_for @poll, url: poll_targets_path(@poll), method: :post do |f| %>
    <div class="collection-check-boxes">
      <%= f.collection_check_boxes :group_ids, @groups, :id, :name do |input| %>
        <label>
          <%= input.check_box %>
          <div class="check-box">
            <%= image_tag input.object.url, class: "avatar" %>
            <i class="fa fa-check-square-o checked hidden" aria-hidden="true"></i>
            <i class="fa fa-square-o unchecked hidden" aria-hidden="true"></i>
            <%= input.text %>
            <p><%= Belonging.where(group_id: input.object.id).count %> yayer(s)</p>
          </div>
        </label>
      <% end %>
    </div>
    <%= f.button :submit, class: "btn btn-primary btn-block", value: "Envoyer" %>
  <% end %>
</div>







