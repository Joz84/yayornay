<div class="profile-container">
  <%= image_tag @user.facebook_picture_url, class: "profile-avatar"  %>
    <div class="profile-child">
      <div>
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      </div>
      <div>
        <h3><%= @user.polls.count %> sondages</h3>
        <h3><%= @user.answers.count %> r√©ponses</h3>
      </div>
    </div>
    <div class="profile-settings">
      <ul>
        <li>
          <%= link_to "#" do %><i class="fa fa-cog" aria-hidden="true"></i> <% end %>
        </li>
        <li>
          <%= link_to new_poll_path do %><i class="fa fa-camera" aria-hidden="true"></i></i> <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

