<div class="profile-container">
  <%= image_tag @user.facebook_picture_url, class: "profile-avatar"  %>
  <div class="profile-child">
    <div>
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
    <div class= "profile-figures">
      <div class="profile-figures-child"> <%= @user.polls.count %> yay </div>
      <div class="profile-figures-child"><%= @user.answers.count %> r√©ponses</div>
      <div class="profile-figures-child"><%= @user.groups.count %> groupes </div>
    </div>
  </div>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle dropdown-size" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "#" do %><i class="fa fa-cog" aria-hidden="true"></i> Edit <% end %></li>
        <li><%= link_to new_poll_path do %><i class="fa fa-camera" aria-hidden="true"></i> Create <% end %></li>
        <li><%= link_to polls_path do %><i class="fa fa-eye" aria-hidden="true"></i> Scroll <% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i> Log out <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>



