<div class="poll-background">
  <% @polls.each do |poll| %>
    <div class="poll-profile-informations">
      <%= link_to my_poll_path(poll) do %>
        <% cl_image_tag(poll.photo.path, class: "min-photo-poll") %>
      <% end %>
      <div class="poll-answers">
        <div class="rappel-context">
          <p>
            <% if poll.context.size < 50 %>
              <%= poll.context %>
            <% else %>
              <%= poll.context.first(50) + "... " %>
            <% end %>
          </p>
        </div>
        <div class="poll-results">
          <%= image_tag "YAYicon.png", class: "flex-child", height: 70+1*poll.yays_count %>
          <h3 class="flex-child">
            <%= poll.yays_count%>
          </h3>
          <h3 class="flex-child">
            <%= poll.nays_count%>
          </h3>
          <%= image_tag "NAYicon.png", class: "flex-child", height: 70+1*poll.nays_count %>
        </div>
      </div>
      <div class="poll-timer">
        <% if poll.ends_at > Time.zone.now %>
          <%= image_tag "sablier", class: "timer", height: 35 %>
          <p>
            <%= ((poll.ends_at -  Time.zone.now) / 60).to_i %> min
          </p>
        <% else %>
          <p>TerminÃ©</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


