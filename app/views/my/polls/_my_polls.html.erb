<% @polls.each do |poll| %>
  <div class="poll-informations">
    <%= cl_image_tag poll.photo.path, width: 100, height: 120, crop: :fill, class: "min-photo-poll" %>

    <div class="poll-answers">
      <h2 id="yay"><%= poll.yays_count %><%= image_tag "yay.png", class: "poll-yn" %></h2>
      <h2 id="nay"><%= poll.nays_count %><%= image_tag "nay.png", class: "poll-yn" %></h2>
      <p><%= poll.context %></p>
    </div>

    <div class="poll-time text-center">
    <%= link_to "voir", my_poll_path(poll) %>
    <% if  poll.ends_at >  Time.zone.now %>
      <p><%= ((poll.ends_at -  Time.zone.now) / 60).to_i %> min.</p>
      <i class="fa fa-clock-o" aria-hidden="true"></i>
    <% else %>
      <p>TerminÃ©</p>
    <% end %>
    </div>
  </div>
<% end %>

