<div class="poll-background">
  <% @polls.each do |poll| %>
    <div class="poll-profile-informations">
      <%= link_to my_poll_path(poll) do %>
        <% cl_image_tag(poll.photo.path, class: "min-photo-poll") %>
      <% end %>
      <div class="poll-answers">
        <div class="rappel-context">
          <p>
            <% if poll.context.size < 35 %>
              <%= poll.context %>
            <% else %>
              <%= poll.context.first(35) + "... " %>
            <% end %>
          </p>
        </div>
        <div class="poll-results">
          <%= image_tag "smiley-coeur.png", class: "flex-child", height: 50+3*poll.yays_count %>
          <h4 class="flex-child">
            <%= poll.yays_count%>
          </h4>
          <h4 class="flex-child">
            <%= poll.nays_count%>
          </h4>
          <%= image_tag "pile-of-poo.png", class: "flex-child", height: 50+3*poll.nays_count %>
        </div>
      </div>

      <div class="poll-timer">
        <div class="anonym text-center">
          <% if poll.anonym == true %>
            <%= image_tag "anonym.png",  height: 25 %>
          <% end %>
        </div>

        <div class="sablier text-center">
          <% if  poll.ends_at >  Time.zone.now %>
            <%= image_tag "sablier_full.png",  height: 25 %>
          <% else %>
            <%= image_tag "sablier.png",  height: 25 %>
          <% end %>
        </div>

        <div id="timer<%= poll.id %>" class ="text-center">
          <% if  poll.ends_at >  Time.zone.now %>
            <p><span id="timer-val"><%= ((poll.ends_at - Time.zone.now) / 60).to_i %></span> min.</p>
            <i class="fa fa-clock-o" aria-hidden="true"></i>
          <% else %>
            <p>Over</p>
          <% end %>
        </div>
      </div>
    </div>

<% content_for(:after_js) do %>
    <script>
      // Set the date we're counting down to (@choogle.due_at)
      var pollEndAt<%= poll.id %> = '<%= poll.ends_at %>';
      var countDownDate<%= poll.id %> = parseDate(pollEndAt<%= poll.id %>);
      // Update the count down every 1 second
      var x<%= poll.id %> = setInterval(function() {
        // Get todays date and time
        var now = new Date().getTime();
        // Find the distance between now an the count down date
        var distance<%= poll.id %> = countDownDate<%= poll.id %> - now;
        // Time calculations for days, hours, minutes and seconds
        //var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours<%= poll.id %> = Math.floor((distance<%= poll.id %> % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes<%= poll.id %> = Math.floor((distance<%= poll.id %> % (1000 * 60 * 60)) / (1000 * 60));
        var seconds<%= poll.id %> = Math.floor((distance<%= poll.id %> % (1000 * 60)) / 1000);
        // Display the result in the element with id="demo"
        if (hours<%= poll.id %> > 0) {
        document.getElementById("timer<%= poll.id %>").innerHTML = hours<%= poll.id %> + "h" + minutes<%= poll.id %> + "min";
         } else {
          document.getElementById("timer<%= poll.id %>").innerHTML = minutes<%= poll.id %> + "min" + seconds<%= poll.id %> + "s";
         }
        // If the count down is finished, write some text
        if (distance<%= poll.id %> < 0) {
          clearInterval(x<%= poll.id %>);
          document.getElementById("timer<%= poll.id %>").innerHTML = "Over";
        }
      }, 1000);
    </script>

  <% end %>
<% end %>
</div>
