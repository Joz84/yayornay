<div class="container">
  <div class="row">
    <% @polls.each do |poll| %>
    <div class="col-xs-12">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
              url('<%= cl_image_path poll.photo.path, height: 300, width: 400; %>')">
        <p> <%= poll.context %> </p>

        <%= link_to "YAY", answers_path( "answer" => {"value" => 1, "poll_id" => poll.id, "user_id" => current_user}), method: :post %>

        <%= link_to "NAY", answers_path( "answer" => {"value" => 0, "poll_id" => poll.id, "user_id" => current_user}), method: :post %>


      </div>
    </div>
    <% end %>
  </div>
</div>

