<% content_for(:body_class, "full-page") %>

<%= link_to "", my_polls_path, class: "button-nav-left fa fa-user" %>
<%= link_to "", new_poll_path, class: "button-nav-right fa fa-camera" %>

<div class="polls">
  <%= render "poll", poll: @polls.last, last: true unless @polls.empty? %>
  <% @polls[0..-2].each do |poll| %>
    <%= render "poll", poll: poll  %>
  <% end %>
</div>

<div class="text-center index-poll-refresh">
  <p> Nothing to yay or nay :( </p>
  <%= link_to "Try to Refresh :) ", "" %>
</div>
