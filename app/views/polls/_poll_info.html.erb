<div class="poll-info hide-info" id="poll-info-<%= poll.id %>">
  <div>
    <p class= "poll_context_info text-center"> <%= poll.context %> </p>
  </div>
  <div class= "poll-author text-center">
    <% user = poll.user %>
    <p> <%= cl_image_tag user.facebook_picture_url, class: "avatar-large"  %> <%= user.first_name %> <%= user.last_name %> </p>
  </div>
  <div class="poll-answers">
    <div class= "yay-barre" style= "width: <%= poll.yays_percent %>%">
      <%= image_tag "yay.png", class: "poll-yn" %>
      <h4 class="yay-barre-count"> <%= poll.yays_count%> </h4>
    </div>
    <div class= "nay-barre" style= "width: <%= poll.nays_percent %>%">
      <%= image_tag "nay.png", class: "poll-ny" %>
      <h4 class="nay-barre-count"> <%= poll.nays_count %> </h4>
    </div>
  </div>
</div>
